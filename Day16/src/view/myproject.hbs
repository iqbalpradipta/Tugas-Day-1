<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>Add Project</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous' />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap"); * { font-family: "Poppins", sans-serif; text-decoration: none; } .btn-dark { background-color: #111727; border: 1px solid #111727; }
      .btn-dark:hover { background-color: #000000; border: 1px solid #111727; } .border-white { background-color: #fafafa; box-shadow: 0px 0px 4px -1px rgba(107, 107, 107, 0.75); }
    </style>
  </head>

  <body style='background-color: #e1e5e9'>
    <!-- Navbar -->
    <nav class='navbar navbar-expand-lg bg-body-tertiary'>
      <div class='container-fluid'>
        <a class='navbar-brand ms-sm-3' href='#'>
          <img src='/assets/image/brandred.png' alt='dumbwaysID' width='80px' height='55px' />
        </a>
        <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a class='nav-link ms-sm-2' aria-current='page' href='/'>Home</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link ms-sm-3 active fw-bold' href='/myproject'>Add Project</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link ms-sm-3' href='/testimonial'>Testimonial</a>
            </li>
          </ul>
          <ul class='navbar-nav'>
            {{#if isLogin}}
              <li class='nav-item'>
                <a class='nav-link me-sm-5 mb-sm-0 fw-bold'>Welcome, {{user.name}}</a>
              </li>
              <li class='nav-item'>
                <a class='nav-link me-sm-4 mb-sm-0 fw-bold' href='/logout'>Logout</a>
              </li>
            {{else}}
              <li class='nav-item'>
                <a class='nav-link me-sm-4 mt-sm-2' href='/register'>Register</a>
              </li>
              <li class='nav-item'>
                <a class='nav-link me-sm-5 mt-sm-2' href='/login'>Login</a>
              </li>
            {{/if}}
          </ul>
          <button class='btn btn-dark me-sm-5 mb-sm-0' type='button'>
            <a href='/contact' style='color: #ffff; text-decoration: none'>Contact Me</a>
          </button>
        </div>
      </div>
    </nav>
    <!-- End Of Navbar -->

    {{#if messages.success}}
      <div class='alert alert-success' role='alert'>
        {{messages.success}}
      </div>
    {{/if}}

    <!-- Form -->
    <h1 class='text-center fw-bold h3 pt-sm-4'>Add My Project</h1>
    <form class='container-sm pt-sm-4 p-sm-5 w-50' method='post' action='/myproject' enctype='multipart/form-data'>
      <div class='mb-sm-3'>
        <label for='inputNameProj' class='form-label fw-bold'>Project Name</label>
        <input type='text' class='form-control form-control-lg' id='inputNameProj' name='name' />
      </div>
      <div class='row'>
        <div class='mb-sm-3 col-sm-6'>
          <label for='inputstartdate' class='form-label fw-bold'>Start Date</label>
          <input type='date' class='form-control' id='inputstartdate' name='start_date' />
        </div>
        <div class='mb-sm-3 col-sm-6'>
          <label for='inputenddate' class='form-label fw-bold'>End Date</label>
          <input type='date' class='form-control' id='inputenddate' name='end_date_string' />
        </div>
      </div>
      <div class='mb-sm-3'>
        <label for='inputdescription' class='form-label fw-bold'>Description</label>
        <textarea class='form-control' id='inputdescription' rows='3' name='description'></textarea>
      </div>
      <p class='fw-bold'>Technologies</p>
      <div class='row ps-sm-3'>
        <div class='col-sm-4 form-check'>
          <input class='form-check-input' type='checkbox' value='nodeJS' id='checkboxNode' name='technologies' />
          <label class='form-check-label' for='checkboxNode'>Node JS </label>
        </div>
        <div class='col-sm-4 form-check'>
          <input class='form-check-input' type='checkbox' value='nextJS' id='checkboxNext' name='technologies' />
          <label class='form-check-label' for='checkboxNext'>Next JS </label>
        </div>
      </div>
      <div class='row ps-sm-3 pt-sm-2'>
        <div class='col-sm-4 form-check'>
          <input class='form-check-input' type='checkbox' value='reactJS' id='checkboxReact' name='technologies' />
          <label class='form-check-label' for='checkboxReact'>React JS </label>
        </div>
        <div class='col-sm-4 form-check mb-sm-3'>
          <input class='form-check-input' type='checkbox' value='typescript' id='checkboxType' name='technologies' />
          <label class='form-check-label' for='checkboxType'>Typescript </label>
        </div>
      </div>
      <div class='col-sm mb-3'>
        <label class='form-label fw-bold' for='inputImage'>Upload Image</label>
        <div class='input-group' for='inputImage'>
          <input type='file' class='form-control' id='inputImage' name='image' />
          <div class='input-group-text'><img src='/assets/icon/file.png' alt='file' /></div>
        </div>
      </div>
      <button type='submit' class='btn btn-dark rounded-5 w-25 float-end'>Submit</button>
    </form>
    <!-- End of Form -->
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL' crossorigin='anonymous'></script>
  </body>
</html>